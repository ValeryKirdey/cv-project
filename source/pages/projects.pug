section(id="projects").projects
  - let cards = [{ title: 'Food Menu', copy: 'Making time a good time by making food the good food.', button: 'Project Link' }, { title: 'Ice-Cream', copy: 'Feel inside cold with our delicious', button: 'Project Link' }, { title: 'IT Company', copy: 'We create easy solutions to complex tasks and problems', button: 'Project Link' }, { title: 'Testing', copy: 'Lightning fast prototyping. Most calendars are designed for teams', button: 'Project Link' }, { title: 'Portfolio', copy: 'Save sincere emotions, romantic feelings and happy moments of life together with professional photographer Alexa Rise', button: 'Project Link' }, { title: 'Shoes Shop', copy: 'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla faucibus egestas elit, at eleifend elit ornare ut.', button: 'Project Link' }]
  h2.animated
    span P
    span R
    span O
    span J
    span E
    span C
    span T
    span S

  mixin card(title, copy, button)
    .card
      .content
        h2.title= title
        p.copy= copy
        a(href='https://github.com/ValeryKirdey/graduate-work' target="_blanck")
          button.btn= button
  main.page-content
    each card in cards
      +card(card.title, card.copy, card.button)